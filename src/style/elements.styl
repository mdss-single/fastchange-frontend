/*  <general-notice>  */
.general-notice
	animation fadeOut .5s
	position fixed
	top 46px
	right 0
	left 0
	visibility hidden
	color #fff
	font-size 1.8rem
	font-family Sbold
	transition all .5s
.general-notice--error
	background-color #d94d4d
.general-notice--success
	background-color #78a92c
.general-notice--active
	animation fade .5s
	z-index 100
	visibility visible
.general-notice__wrap
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content center
	align-items center
	position relative
	min-height 70px
.general-notice__close
	position absolute
	top 50%
	right 0
	width 36px
	height @width
	border 2px solid #fff
	border-radius 50%
	transform translateY(-50%)
	&:before
	&:after
		position absolute
		top 15px
		left 6px
		width 20px
		height 2px
		background-color #fff
		content ''
	&:before
		transform rotate(45deg)
	&:after
		transform rotate(-45deg)
/*  </general-notice>  */

/*  <modal>  */
.modal
	display none
	background-color #fff
	border-radius 5px
/*  </modal>  */

/*  <error>  */
.input-text--error + div
	position relative
label.input-text--error
	position absolute
	z-index 100
	width 100%
	color #fff
	font-size 1.4rem
	font-family Sbold
	line-height 1.8rem
	background-color rgba(#d84449, .95)
	border-radius 5px
	padding 12px 18px
	margin-top 16px
	&:before
		display block
		font-size 1.3rem
		font-family Sregular
		margin-bottom 5px
		content 'Ошибка!'
	&:after
		position absolute
		top -6px
		left 50%
		border solid transparent
		border-width 0 6px 6px
		border-bottom-color rgba(#d84449, .95)
		content ''
		transform translateX(-50%)
/*  </error>  */