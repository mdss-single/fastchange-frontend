/*  <animations>  */
@keyframes fade {
	from {
		opacity:0;
	}
	to {
		opacity:1;
	}
}
@keyframes fadeOut {
	from {
		opacity:1;
	}
	to {
		opacity:0;
	}
}
/*  </animations>  */

/*  <inputs>  */
.input-text
	width 100%
	height 40px
	color #000
	font-size 1.6rem
	background-color #f5f7fc
	border 2px solid #e3e9f0
	border-radius 5px
	padding 0 12px
.btn
	height 52px
	color #fff
	font-size 1.8rem
	font-family Smedium
	background-color #0888ff
	border 0
	border-radius 5px
	padding 0 20px
	transition all .2s
	&:hover
		text-decoration none
		background-color darken(#0888ff, 3)
a.btn
	display inline-block
	line-height 52px
.btn--fullwidth
	width 100%
/*  </inputs>  */

/*  <general-notice>  */
.general-notice
	animation fadeOut .5s
	position fixed
	top 46px
	right 0
	left 0
	visibility hidden
	color #fff
	font-size 1.8rem
	font-family Sbold
	transition all .5s
.general-notice--error
	background-color #d94d4d
.general-notice--success
	background-color #78a92c
.general-notice--active
	animation fade .5s
	z-index 100
	visibility visible
.general-notice__wrap
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content center
	align-items center
	position relative
	min-height 70px
.general-notice__close
	position absolute
	top 50%
	right 0
	width 36px
	height @width
	border 2px solid #fff
	border-radius 50%
	transform translateY(-50%)
	&:before
	&:after
		position absolute
		top 15px
		left 6px
		width 20px
		height 2px
		background-color #fff
		content ''
	&:before
		transform rotate(45deg)
	&:after
		transform rotate(-45deg)
/*  </general-notice>  */