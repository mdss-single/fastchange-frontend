/*  <elements>  */
.input-text
	width 100%
	height 40px
	color #000
	font-size 1.6rem
	background-color #f5f7fc
	border 2px solid #e3e9f0
	border-radius 5px
	padding 0 12px
.btn
	height 52px
	color #fff
	font-size 1.8rem
	font-family Smedium
	background-color #0888ff
	border 0
	border-radius 5px
	padding 0 20px
	transition all .2s
	&:hover
		text-decoration none
		background-color darken(#0888ff, 3)
a.btn
	display inline-block
	line-height 52px
.btn--fullwidth
	width 100%
/*  </elements>  */